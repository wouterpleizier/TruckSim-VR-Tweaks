<UserControl x:Class="TruckSimVRTweaks.InputBindingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TruckSimVRTweaks"
             mc:Ignorable="d">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
          d:DataContext="{d:DesignInstance Type=local:InputBindingControl}"
          Margin="0,0,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="{Binding Label}"/>
        <DockPanel Grid.Column="1" Grid.Row="0">
            <Button DockPanel.Dock="Right" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                    Content="❌" ToolTip="Clear binding" BorderThickness="0,1,1,1" Click="HandleClearButtonClicked">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding InputBinding.Type}" Value="Unset">
                                <DataTrigger.Setters>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="HandleAssignButtonClicked" Content="{Binding AssignButtonContent, Mode=OneWay}"/>
        </DockPanel>
    </Grid>
</UserControl>
